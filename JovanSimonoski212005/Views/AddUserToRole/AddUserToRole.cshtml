@model JovanSimonoski212005.Models.AddUserToRoleViewModel

@{
    ViewBag.Title = "AddUserToRole";
}
<h2>Add User to Role</h2>

@using (Html.BeginForm("AddUserToRole", "AddUserToRole"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new {@class="form-control"})
    </div>

    <div class="form-group">
        @Html.DropDownListFor(m => m.SelectedRole, new SelectList(Model.Roles), new { @class = "form-control" })
    </div>
    
    <button type="submit" class="btn btn-primary">Add to Role</button>
}
